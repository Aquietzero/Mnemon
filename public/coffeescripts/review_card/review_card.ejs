<div class="section">
  <input class="title" name="title" type="text" value="<%= data.title %>" disabled />
  <input class="sub-title" name="sub_title" type="text" value="<%= data.sub_title %>" disabled />
</div>

<hr />

<div class="section">
  <textarea disabled class="explain" id="" name="explain"><%= data.explain %></textarea>
</div>

<div class="section">
  <textarea disabled class="content" id="" name="content"><%= data.content %></textarea>
</div>

<div class="section">
  <div class="memory-aids-section">
    <div class="header">memory aids</div>
    <input class="memory-aids" name="memory_aids" type="text" value="<%= data.memory_aids %>" placeholder="What? It\'s a word.">
  </div>
</div>

<div class="section">
  <% if (data.connections && data.connections.length > 0) { %>
    <div class="connections-section">
      <div class="header">connections</div>
      <input class="connections" type="text" value="<%= data.connections %>">
    </div>
  <% } %>
</div>

<div class="operations">
  <i class="circular big inverted checkmark icon operation remember"></i>
  <i class="circular big inverted remove icon operation not-remember"></i>
</div>

<div class="word-explain">
</div>
